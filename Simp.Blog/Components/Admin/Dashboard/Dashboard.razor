@attribute [Route(AdminRoutes.Dashboard)]
@layout AdminLayout

<PageTitle>Dashboard</PageTitle>

<div class="row">
    <div class="col-6">
        <div class="row">
            <div class="col-6">
                <a class="btn btn-light w-100 p-5" href="@AdminRoutes.ToBlogsCreate()">
                    <i class="bi bi-pencil-fill fs-4"></i>
                    <span class="ms-2">New post</span>
                </a>
            </div>
            <div class="col-6">
                <a class="btn btn-light w-100 p-5">
                    <i class="bi bi-plus-lg fs-4"></i>
                    <span class="ms-2">New page</span>
                </a>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-4">
                <a class="btn btn-light w-100 p-5" href="@string.Format(AdminRoutes.Blogs)">
                    <span class="ms-2">0 posts</span>
                </a>
            </div>
            <div class="col-4">
                <a class="btn btn-light w-100 p-5">
                    <span class="ms-2">0 pages</span>
                </a>
            </div>
            <div class="col-4">
                <a class="btn btn-light w-100 p-5">
                    <span class="ms-2">0 subcribers</span>
                </a>
            </div>
        </div>
    </div>
</div>